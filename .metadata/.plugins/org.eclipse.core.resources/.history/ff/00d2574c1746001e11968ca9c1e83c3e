package Model.Page;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import Model.DataBase;
import VO.PageNum;

public class Page {

	private Connection con;
	private PreparedStatement ps;
	private ResultSet rs;
	private String query;
	
	private String title = "";
	private String contents = "";
	
	DataBase db = new DataBase();
	
	public void setPage(int totalNum) {
		PageNum pn = new PageNum();
		
		pn.setPageSize(10);
		//보여질 startNum정하기
		totalNum/10
		
		
	}
	
	//목록 갯수 구하기
	public int getPageNum(HttpServletRequest request, HttpServletResponse response) {
		int pageNum = 0;
		
		query = " SELECT COUNT(*) AS pNum "
				+ " FROM CS_QUES "
				+ " WHERE 1=1 "
				;
		
		if(title != "") {
			query += " AND title LIKE '%" + title + "%' ";
		}

		if(contents != "") {
			query += " AND contents LIKE '%" + contents + "%' ";
		}
		
		try {
			con = db.getConnection();
			ps = con.prepareStatement(query);
			rs = ps.executeQuery();
			
			if(rs.next()) {
				pageNum = rs.getInt("pNum");
			}
			
		}catch(Exception e) {
			e.printStackTrace();
		}finally {
			db.close(rs);
			db.close(ps);
			db.close(con);
		}
		
		return pageNum;
	}
}
