<script>
	function checkBoard(){
		var f = document.frm;
		
		if(f.comment_ID.val() == ""){
			alert("작성자를 입력해주세요.");
			f.comment_ID.focus();
			return false;
		}
		
		if(f.title.val() == ""){
			alert("제목을 입력해주세요.");
			f.title.focus();
			return false;
		}
		
		if(f.comment_ID.val() == ""){
			alert("내용을 입력해주세요.");
			f.comment_ID.focus();
			return false;
		}
		
		f.submit();
	}

	let oEditors = [];

    smartEditor = function() {
           nhn.husky.EZCreator.createInIFrame({
               oAppRef: oEditors,
               elPlaceHolder: "quesContents", //textarea에 부여한 아이디와 동일해야한다.
               sSkinURI: "smartEditor/SmartEditor2Skin.html", //자신의 프로젝트에 맞게 경로 수
               fCreator: "createSEditor2"
           })
       }

    $(document).ready(function() {
    	//스마트에디터 적용
         smartEditor(); 
             //값 불러오기
          function preview(){
           	// 에디터의 내용을 textarea에 적용
           	oEditors.getById["quesContents"].exec("UPDATE_CONTENTS_FIELD", []);
               // textarea 값 불러오기 
           	var content = document.getElementById("editorTxt0").value;
           	alert(content);
           	return;
       }
          
    })


</script>
