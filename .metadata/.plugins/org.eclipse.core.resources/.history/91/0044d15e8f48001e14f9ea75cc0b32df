<script>
	function checkBoard(){
		var f = document.frm;
		
		if(f.comment_ID.val() == ""){
			alert("작성자를 입력해주세요.");
			f.comment_ID.focus();
			return false;
		}
		
		if(f.title.val() == ""){
			alert("제목을 입력해주세요.");
			f.title.focus();
			return false;
		}
		
		if(f.comment_ID.val() == ""){
			alert("내용을 입력해주세요.");
			f.comment_ID.focus();
			return false;
		}
		
		f.submit();
	}
</script>
