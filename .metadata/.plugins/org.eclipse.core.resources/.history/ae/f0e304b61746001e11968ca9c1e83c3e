package Model.Page;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import Model.DataBase;
import VO.PageNum;

public class Page {

	private Connection con;
	private PreparedStatement ps;
	private ResultSet rs;
	private String query;
	
	private String title = "";
	private String contents = "";
	
	int nowNum; //현재페이지
	int startNum; //시작페이지
	int endNum; //종료페이지
	
	int listNum; //목록 전체 갯수
	int totalNum; //전체 페이지 수 

	int pageSize; //한 페이지에 보일 게시글 수 
	int blockSize; //한 줄에 보일 페이지 수(ex) 1~5,
	
	DataBase db = new DataBase();
	
	public void setPage(int totalNum) {
		PageNum pn = new PageNum();
		
		this.totalNum = totalNum; //전체 목록 갯수
		pageSize = 10; //한 페이지에 노출될 목록 갯수
		blockSize = 5; //한 라인에 보일 페이지 수
		
		//보여질 startNum정하기
		
		
	}
	
	//목록 갯수 구하기
	public int getPageNum(HttpServletRequest request, HttpServletResponse response) {
		int pageNum = 0;
		
		query = " SELECT COUNT(*) AS pNum "
				+ " FROM CS_QUES "
				+ " WHERE 1=1 "
				;
		
		if(title != "") {
			query += " AND title LIKE '%" + title + "%' ";
		}

		if(contents != "") {
			query += " AND contents LIKE '%" + contents + "%' ";
		}
		
		try {
			con = db.getConnection();
			ps = con.prepareStatement(query);
			rs = ps.executeQuery();
			
			if(rs.next()) {
				pageNum = rs.getInt("pNum");
			}
			
		}catch(Exception e) {
			e.printStackTrace();
		}finally {
			db.close(rs);
			db.close(ps);
			db.close(con);
		}
		
		return pageNum;
	}
}
